
<!DOCTYPE html>
<html>
<head>
    <title>Liste des livres</title>
</head>
<body>
    <h1>Liste des livres</h1>
    <form method="get" action="{{ path('searchbook') }}">
        <label for="bookId">search by ID:</label>
        <input type="text" name="bookId" id="bookId" />
        <button type="submit">Search</button>
    </form>
<table border="3">
       <tr>
        <td>id</td>
        <td>Title</td>
       
        <td>publicationDate</td>
        <td>published</td>
        <td>Category</td>
        <td>author</td>
        <td>Action</td>
        
    </tr>
   
        {% for book in books %}
           <tr>
        <td>{{book.id}}</td>
        <td>{{book.Title | upper}}</td>
        <td>{{book.publicationDate | date()}}</td>
        <td>{{book.published }}</td>
        <td>{{book.category}}</td>
        <td>{{book.author.username}}</td>
     
    </tr>

        {% endfor %}
        
    </table> <td><a href="{{path('addbook')}}">Create new book </a>
</body>
</html>