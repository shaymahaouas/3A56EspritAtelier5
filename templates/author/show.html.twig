<p></p>
<p>Nombre des auteurs : {{ auth | length }}</p>

{% if auth is defined and auth |length  > 0  %}
<table border="3"> 
<tr>
<td>id</td>
<td>picture</td>
<td>username</td>
<td>email</td>
<td>nb_books</td>
<td>Action</td>
</tr>
{% set total = 0 %}

{% for a in auth %}
<tr>
    <td>{{a.id}}</td>
    <td><img src="{{asset (a.picture)}}"></td>
    <td>{{a.username}}</td>
    <td>{{a.email}}</td>
    <td>{{a.nb_books}}</td>
    {% set total = total + a.nb_books %}

    <td><a href="{{path('authorDetails',{'id': a.id})}}">Details</a></td>
    </tr>
    {% endfor %}
</table>
<p> Nombre Total des livres : {{ total }}</p>

{% else %}
<p> Authors not found</p>

{% endif %}